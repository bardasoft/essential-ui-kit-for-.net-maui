<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EssentialMAUIUIKit.Views.Navigation.IconNameListPage"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
             xmlns:listView="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             xmlns:local="clr-namespace:EssentialMAUIUIKit">
    <ContentView.BindingContext>
        <local:NameListViewModel/>
    </ContentView.BindingContext>
    <ContentView.Content>
        <Grid RowSpacing="0"
                RowDefinitions="{OnPlatform Default=*, MacCatalyst=Auto}"
                Padding="0,10,0,0">
            <Border StrokeShape="RoundRectangle 10"
                    Padding="20"
                    BackgroundColor="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}"
                    WidthRequest="{OnPlatform MacCatalyst=550, WinUI=550}"
                    IsVisible="{OnPlatform Android=False, iOS=False}">
                <Grid>
                    <listView:SfListView
                        AllowGroupExpandCollapse="False"
                        AllowSwiping="True"
                        AutoFitMode="Height"
                        ScrollBarVisibility="Never"
                        ItemSpacing="0"
                        ItemsSource="{Binding NamesList}"
                        SelectionBackground="{AppThemeBinding Light={DynamicResource SelectionBackgroundLight}, Dark={DynamicResource SelectionBackgroundDark}}"
                        SelectionGesture="Tap"
                        SelectionMode="Single"
                        VerticalOptions="Fill">

                        <!--  Group Header  -->
                        <listView:SfListView.GroupHeaderTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <StackLayout
                                            BackgroundColor="{DynamicResource Gray-100}"
                                            HeightRequest="40"
                                            Orientation="Horizontal"
                                            Spacing="0">

                                            <Label
                                                Margin="16,8"
                                                FontFamily="Roboto-Regular"
                                                FontSize="16"
                                                HorizontalOptions="Start"
                                                Text="{Binding Key}"
                                                TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}"
                                                VerticalOptions="Center"/>

                                        </StackLayout>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </listView:SfListView.GroupHeaderTemplate>

                        <listView:SfListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <StackLayout Spacing="0">
                                            <Grid
                                                Margin="17,0"
                                                ColumnDefinitions="Auto, *, Auto"
                                                ColumnSpacing="0"
                                                HeightRequest="48">

                                                <!--  User icon  -->
                                                <Label
                                                    Margin="0,12"
                                                    FontSize="20"
                                                    Style="{DynamicResource IconLabelStyle}"
                                                    Text="{DynamicResource Account}"/>

                                                <!--  Label for contacts  -->
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="16,12"
                                                    FontFamily="Roboto-Regular"
                                                    FontSize="16"
                                                    HorizontalOptions="Start"
                                                    LineHeight="{OnPlatform Android=1.5,
                                                        Default=-1}"
                                                    Text="{Binding Name}"
                                                    TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center"/>

                                                <!--  Next button icon  -->
                                                <buttons:SfButton
                                                    Grid.Column="2"
                                                    Margin="0,6"
                                                    CornerRadius="4"
                                                    FontSize="16"
                                                    HeightRequest="34"
                                                    Style="{DynamicResource IconButtonStyle}"
                                                    Text="{DynamicResource Next}"
                                                    WidthRequest="34"/>

                                            </Grid>
                                        </StackLayout>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </listView:SfListView.ItemTemplate>
                    </listView:SfListView>
                </Grid>
            </Border>

            <Grid Grid.Row="2"
                  IsVisible="{OnPlatform WinUI=False, MacCatalyst=False}">
                <listView:SfListView
                    x:Name="IconNameList"
                    AllowGroupExpandCollapse="False"
                    AllowSwiping="True"
                    AutoFitMode="Height"
                    ScrollBarVisibility="Never"
                    ItemSpacing="0"
                    ItemsSource="{Binding NamesList}"
                    SelectionBackground="{AppThemeBinding Light={DynamicResource SelectionBackgroundLight}, Dark={DynamicResource SelectionBackgroundDark}}"
                    SelectionGesture="Tap"
                    SelectionMode="Single"
                    VerticalOptions="Fill">

                    <!--  Group Header  -->
                    <listView:SfListView.GroupHeaderTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout
                                        BackgroundColor="{DynamicResource Gray-100}"
                                        HeightRequest="40"
                                        Orientation="Horizontal"
                                        Spacing="0">

                                        <Label
                                            Margin="16,8"
                                            FontFamily="Roboto-Regular"
                                            FontSize="16"
                                            HorizontalOptions="Start"
                                            Text="{Binding Key}"
                                            TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}"
                                            VerticalOptions="Center"/>

                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </listView:SfListView.GroupHeaderTemplate>

                    <listView:SfListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Spacing="0">
                                        <Grid
                                            Margin="17,0"
                                            ColumnDefinitions="Auto, *, Auto"
                                            ColumnSpacing="0"
                                            HeightRequest="48">

                                            <!--  User icon  -->
                                            <Label
                                                Margin="0,12"
                                                FontSize="20"
                                                Style="{DynamicResource IconLabelStyle}"
                                                Text="{DynamicResource Account}"/>

                                            <!--  Label for contacts  -->
                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="16,12"
                                                FontFamily="Roboto-Regular"
                                                FontSize="16"
                                                HorizontalOptions="Start"
                                                LineHeight="{OnPlatform Android=1.5,
                                                    Default=-1}"
                                                Text="{Binding Name}"
                                                TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColorLight}, Dark={DynamicResource PrimaryTextColorDark}}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center"/>

                                            <!--  Next button icon  -->
                                            <buttons:SfButton
                                                Grid.Column="2"
                                                Margin="0,6"
                                                CornerRadius="4"
                                                FontSize="16"
                                                HeightRequest="34"
                                                Style="{DynamicResource IconButtonStyle}"
                                                Text="{DynamicResource Next}"
                                                WidthRequest="34"/>

                                        </Grid>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </listView:SfListView.ItemTemplate>
                </listView:SfListView>
            </Grid>


        </Grid>
    </ContentView.Content>
</ContentView>